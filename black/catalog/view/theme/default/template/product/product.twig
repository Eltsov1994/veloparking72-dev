{{ header }}


<div id="product-product" class="_container _start col-xs-12">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>

  <div>
    {{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}

    <div id="content" class="{{ class }} opencart__product__content">

      {{ content_top }}
      <div class="row">
        {% if column_left or column_right %}
          {% set class = 'col-sm-6' %}
        {% else %}
          {% set class = 'col-sm-8' %}
        {% endif %}
        <div class="{{ class }}"> 

          {% if thumb or images %}
            <div class="product-item__image _gallery">
              <a href="{{ thumb }}">
                <img src="{{ thumb }}" alt="Велосипед">
                <div class="img-catalog__stickers stickers">
                  {% if special %}
                  <div class="stickers__sticker stickers__sale"></div>
                  {% endif %}
                </div>
              </a>
            </div>
          {% endif %}

          <div class="tabs__container" data-da=".mobile-tabs, 767, 0">

            <ul class="nav nav-tabs">
              <li class="active"><a href="#tab-description" data-toggle="tab">{{ tab_description }}</a></li>
              {% if attribute_groups %}
              <li><a href="#tab-specification" data-toggle="tab">{{ tab_attribute }}</a></li>
              {% endif %}
              {% if review_status %}
              <li><a href="#tab-review" data-toggle="tab">{{ tab_review }}</a></li>
              {% endif %}
            </ul>

            <div class="tab-content">
              <div class="tab-pane active" id="tab-description">{{ description }}</div>
              {% if attribute_groups %}
                <div class="tab-pane" id="tab-specification">
                    {% for attribute_group in attribute_groups %}
                        {% for attribute in attribute_group.attribute %}
                          <div class="product-item__tabs-detail">
                            <span>{{ attribute.name }}</span>
                            <span>{{ attribute.text }}</span>
                          </div>
                        {% endfor %}

                    {% endfor %}
                </div>
              {% endif %}
              {% if review_status %}
                <div class="tab-pane" id="tab-review">
                  <form class="form-horizontal" id="form-review">
                    <div id="review"></div>
                    <h2>{{ text_write }}</h2>
                    {% if review_guest %}
                    <div class="form-group required">
                      <div class="col-sm-12">
                        <label class="form__label" for="input-name">{{ entry_name }}</label>
                        <input type="text" name="name" value="{{ customer_name }}" id="input-name" class="input" />
                      </div>
                    </div>
                    <div class="form-group required">
                      <div class="col-sm-12">
                        <label class="form__label" for="input-review">{{ entry_review }}</label>
                        <textarea name="text" rows="5" id="input-review" class="input"></textarea>
                        {# <div class="help-block">{{ text_note }}</div> #}
                      </div>
                    </div>
                    <div class="form-group required">
                      <div class="col-sm-12 opencart__product-rating">
                        <label class="hidden-xs">{{ entry_rating }}:</label>
                        <label>{{ entry_bad }}</label>
                        <div class="_radio">
                          <input name="rating" type="radio" value="1">
                          <input name="rating" type="radio" value="2">
                          <input name="rating" type="radio" value="3">
                          <input name="rating" type="radio" value="4">
                          <input name="rating" type="radio" value="5" data-active="true">
                        </div>
                        <label>{{ entry_good }}</label>
                      </div>
                    </div>
                    {{ captcha }}
                    <div class="buttons clearfix">
                      <div class="pull-right">
                        <button type="button" id="button-review" data-loading-text="{{ text_loading }}" class="product-item__buy main__button">Оставить отзыв</button>
                      </div>
                    </div>
                    {% else %}
                    {{ text_login }}
                    {% endif %}
                  </form>
                </div>
              {% endif %}
            </div>

          </div>
          
        </div>
        {% if column_left or column_right %}
          {% set class = 'col-sm-6' %}
        {% else %}
          {% set class = 'col-sm-4' %}
        {% endif %}

        <div class="{{ class }}">
          <div class="btn-group">
            <button type="button" data-toggle="tooltip" class="btn btn-default opencart__product-btn" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product_id }}');"><i class="fa fa-heart"></i></button>
            <button type="button" data-toggle="tooltip" class="btn btn-default opencart__product-btn" title="{{ button_compare }}" onclick="compare.add('{{ product_id }}');"><i class="fa fa-exchange"></i></button>
          </div>
          <div class="main__title">
            <h1>{{ heading_title }}</h1>
          </div>
          <ul class="list-unstyled">
            {% if manufacturer %}
            <li>{{ text_manufacturer }} <a class="" href="{{ manufacturers }}">{{ manufacturer }}</a></li>
            {% endif %}
            <li>{{ text_model }} {{ model }}</li>
            {% if reward %}
            <li>{{ text_reward }} {{ reward }}</li>
            {% endif %}
            <li>{{ text_stock }} {{ stock }}</li>
          </ul>

          {% if price %}
          <p class="price _price info-catalog__price">
            {% if not special %}
              {{ price }}
              <span class="_rub"></span>
            {% else %} 
              <span class="price-new info-catalog__price">{{ special }}<span class="_rub"></span></span>
              <span class="price-old info-catalog__price">{{ price }}<span class="_rub"></span></span> 
            {% endif %}
            {% if tax %} 
              <span class="price-tax">{{ text_tax }} {{ tax }}</span> 
            {% endif %} 
          </p>
          {% endif %}

          <hr>
          
          <div id="product"> 
            {% if options %}
              <h3 class="character__title">{{ text_option }}</h3>
              {% for option in options %}
                {% if option.type == 'select' %}
                  <div class="form-group{% if option.required %} required {% endif %}">
                    {# <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label> #}
                    <select name="option[{{ option.product_option_id }}]" id="input-option{{ option.product_option_id }}" class="form-control">
                      <option value="">{{ text_select }}</option>
                      {% for option_value in option.product_option_value %}
                      <option value="{{ option_value.product_option_value_id }}">{{ option_value.name }}
                        {% if option_value.price %}
                        ({{ option_value.price_prefix }}{{ option_value.price }})
                        {% endif %}
                      </option>
                      {% endfor %}
                    </select>
                  </div>
                {% endif %}
              {% endfor %}
            {% endif %}


            {% if recurrings %}
              <hr>
              <h3>{{ text_payment_recurring }}</h3>
              <div class="form-group required">
                <select name="recurring_id" class="form-control">
                  <option value="">{{ text_select }}</option>
                  {% for recurring in recurrings %}
                  <option value="{{ recurring.recurring_id }}">{{ recurring.name }}</option>
                  {% endfor %}
                </select>
                <div class="help-block" id="recurring-description"></div>
              </div>
            {% endif %}

            <div class="form-group">
              {# <label class="control-label" for="input-quantity">{{ entry_qty }}</label> #}
              <input type="text" name="quantity" value="{{ minimum }}" size="2" id="input-quantity" class="form-control hidden" />
              <input type="hidden" name="product_id" value="{{ product_id }}" />
              <br />
              <button type="button" id="button-cart" data-loading-text="{{ text_loading }}" class="product-item__buy main__button block-yellow">{{ button_cart }}</button>
            </div>
            {% if minimum > 1 %}
            <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_minimum }}</div>
            {% endif %}</div>
          {% if review_status %}
          <div class="rating">
            <p>
              <span class="rating__stars">
                {% for i in 1..5 %}
                  {% if rating < i %}
                    <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>
                  {% else %}
                    <span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
                  {% endif %}
                {% endfor %}
              </span>
              <span class="rating__links">
                <a href="" onclick="$('a[href=\'#tab-review\']').trigger('click'); return false;">{{ reviews }}</a> / <a href="" onclick="$('a[href=\'#tab-review\']').trigger('click'); return false;">{{ text_write }}</a>
              </span>
            </p>
            <hr>
            <!-- AddThis Button BEGIN -->
            {# <div class="addthis_toolbox addthis_default_style" data-url="{{ share }}"><a class="addthis_button_facebook_like" fb:like:layout="button_count"></a> <a class="addthis_button_tweet"></a> <a class="addthis_button_pinterest_pinit"></a> <a class="addthis_counter addthis_pill_style"></a></div> #}
            {# <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-515eeaf54693130e"></script>  #}
            <!-- AddThis Button END --> 
          </div>
          {% endif %} 
        </div>

        <div class="col-sm-12 mobile-tabs"></div>

      </div>
      
      {% if products %}
        <div class="product__footer">
          <h3 class="products__footer-title">Похожие товары</h3>

          <div class="tabs__item swiper-bild _swiper_is">
            <div class="row swiper-wrapper">
              {% set i = 0 %}
              {% for product in products %}
                {% if column_left and column_right %}
                {% set class = 'col-xs-8 col-sm-6' %}
                {% elseif column_left or column_right %}
                {% set class = 'col-xs-6 col-md-4' %}
                {% else %}
                {% set class = 'col-xs-6 col-sm-3' %}
                {% endif %}
                <div class="{{ class }} specials-product__item swiper-slide product-layout product-grid">
                  <div class="catalog-item">
                    <div class="product-thumb transition opencart__product-thumb">
                      <div class="image"><a href="{{ product.href }}"><img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive swiper-lazy" /></a></div>
                      <div class="caption">
                        <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                        <p>{{ product.description }}</p>
                        {% if product.rating %}
                          <div class="rating"> 
                            {% for j in 1..5 %}
                            {% if product.rating < j %} 
                            <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span> 
                            {% else %} 
                            <span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span> 
                            {% endif %}
                            {% endfor %} 
                          </div>
                        {% endif %}

                        {# {% if product.price %}
                          <p class="price"> 
                            {% if not product.special %}
                            {{ product.price }}
                            {% else %}
                            <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span> 
                            {% endif %}

                            {% if product.tax %} 
                            <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> 
                            {% endif %} 
                          </p>
                        {% endif %} #}
                        {% if product.price %}
                          <p class="price _price info-catalog__price">
                            {% if not product.special %}
                              {{ product.price }}
                              <span class="_rub"></span>
                            {% else %} 
                              <span class="price-new info-catalog__price">{{ product.special }}<span class="_rub"></span></span>
                              <span class="price-old info-catalog__price">{{ product.price }}<span class="_rub"></span></span> 
                            {% endif %}
                            {% if product.tax %} 
                              <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> 
                            {% endif %} 
                          </p>
                        {% endif %}

                      </div>
                      <div class="button-group">
                        <button type="button" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');"><span class="hidden-xs hidden-sm hidden-md">{{ button_cart }}</span> <i class="fa fa-shopping-cart"></i></button>
                        <button type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart"></i></button>
                        <button type="button" data-toggle="tooltip" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');"><i class="fa fa-exchange"></i></button>
                      </div>
                    </div>
                  </div>
                </div>
                {% if column_left and column_right and (i + 1) % 2 == 0 %}
                <div class="clearfix visible-md visible-sm"></div>
                {% elseif column_left or column_right and (i + 1) % 3 == 0 %}
                <div class="clearfix visible-md"></div>
                {% elseif (i + 1) % 4 == 0 %}
                <div class="clearfix visible-md"></div>
                {% endif %}
                {% set i = i + 1 %}
              {% endfor %}
            </div>
            <div class="more__item_next _icon-arrowright more__item"></div>
            <div class="more__item_prev _icon-arrowleft more__item"></div>
          </div>
        </div>
      {% endif %}

      {% if tags %}
        <p>{{ text_tags }}
        {% for i in 0..tags|length %}
          {% if i < (tags|length - 1) %} <a href="{{ tags[i].href }}">{{ tags[i].tag }}</a>,
          {% else %} <a href="{{ tags[i].href }}">{{ tags[i].tag }}</a> {% endif %}
        {% endfor %} </p>
      {% endif %}
      {{ content_bottom }}

    </div>

    {{ column_right }}
  </div>
</div>








