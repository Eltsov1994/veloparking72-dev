<div class="simplecheckout-block" id="simplecheckout_cart" {{ hide ? 'data-hide="true"' : '' }} {{ has_error ? 'data-error="true"' : '' }}>
{% if display_header %}
    <div class="checkout-heading panel-heading">{{ text_cart }} <span class="checkout-heading-button"><a href="javascript:void(0)" data-onclick="clearCart" class="text-danger" data-confirm-text="{{ text_clear_cart_question }}">{{ text_clear_cart }}</a></span></div>
{% endif %}
{% if attention %}
    <div class="alert alert-danger simplecheckout-warning-block">{{ attention }}</div>
{% endif %}
{% if error_warning %}
    <div class="alert alert-danger simplecheckout-warning-block">{{ error_warning }}</div>
{% endif %}
    <div class="dropdown-cart__body">
        {% for product in products %}
            <div class="dropdown-cart__item">
                <div class="dropdown-cart__image">{% if product.thumb %} <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-thumbnail" /></a> {% endif %}</div>
                <div class="dropdown-cart__description">
                <a href="{{ product.href }}">{{ product.name }}</a>
                {% if product.option %}
                    {% for option in product.option %} <br />
                    <small>{{ option.value }}</small> 
                    {% endfor %}
                {% endif %}
                </div>
                <div class="dropdown-cart__quantity quantity">
                    <button class="_icon-minus" data-onclick="decreaseProductQuantity" data-toggle="tooltip" type="submit"></button>
                    <input id="checkout-cart__input" class="input" type="text" data-onchange="changeProductQuantity" {{ quantity_step_as_minimum ? 'data-minimum="' ~ product['minimum'] ~ '"' : '' }} name="quantity[{{ product['cart_id'] is not empty ? product['cart_id'] : product['key'] }}]" value="{{ product['quantity'] }}" size="1" />
                    <button class="_icon-plus" data-onclick="increaseProductQuantity" data-toggle="tooltip" type="submit"></button>
                </div>
                <div class="dropdown-cart__price _price">
                    {% if product['old_price'] is not empty %}
                        <p class="_rub price-old">{{ product.old_price }}</p>
                        <p class="_rub price-new">{{ product.price }}</p>
                    {% else %}
                        <p class="_rub">{{ product.price }}</p>
                    {% endif %}
                </div>
                <button type="button" data-onclick="removeProduct" data-product-key="{{ product['cart_id'] is not empty ? product['cart_id'] : product['key'] }}"  title="{{ button_remove }}" class="_icon-trash dropdown-cart__remove"></button>
            </div>
        {% endfor %}
    </div>



