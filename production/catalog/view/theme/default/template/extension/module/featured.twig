<div class="tabs__item _tabs-block swiper-bild _swiper_is">
  <div class="swiper-wrapper">
    {% for product in products %}

    <div class="product-layout swiper-slide">
      <div class="catalog-item">
        <div class="product-thumb opencart__product-thumb">
          <div class="image"><a href="{{ product.href }}">
            <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive swiper-lazy" />
            <div class="img-catalog__stickers stickers">
              <div class="stickers__sticker stickers__feature"></div>
              {% if product.special %}
              <div class="stickers__sticker stickers__sale"></div>
              {% endif %}
              {% if product.date_added == product.year_now %}
              <div class="stickers__sticker stickers__new"></div>
              {% endif %}
            </div>
          </a></div>
          <div>
            <div class="caption">
              <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
              <p>{{ product.description }}</p>

              {% if product.price %}
              <p class="price _price info-catalog__price">
                {% if not product.special %}
                  {{ product.price }}
                  <span class="_rub"></span>
                {% else %} 
                  <span class="price-new info-catalog__price">{{ product.special }}<span class="_rub"></span></span>
                  <span class="price-old info-catalog__price">{{ product.price }}<span class="_rub"></span></span> 
                {% endif %}
                {% if product.tax %} 
                  <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> 
                {% endif %} 
              </p>
              {% endif %}

              {% if product.rating %}
              <div class="rating"> 
                {% for i in 1..5 %}
                  {% if product.rating < i %} 
                    <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
                  {% else %}
                    <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
                  {% endif %}
                {% endfor %}
              </div>
              {% endif %}
              <div class="info-catalog__options">
                <button class="info-catalog__wishlist" type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart"></i></button>
                <button class="info-catalog__compare" type="button" onclick="compare.add('{{ product.product_id }}');">В сравнение</button>
              </div>
            </div>

            <div class="catalog-catalogies__footer">
              <a href="{{ product.href }}"><i class="fa fa-shopping-cart"></i><span>Подробнее</span></a>
            </div>

          </div>
        </div>
      </div>
    </div>

    {% endfor %}
  </div>
  <div class="more__item_next _icon-arrowright more__item"></div>
  <div class="more__item_prev _icon-arrowleft more__item"></div>
</div>
