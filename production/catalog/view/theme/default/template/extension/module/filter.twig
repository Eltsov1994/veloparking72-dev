<div class="catalogies__filters filters-catalogies _spollers">
    <div class="filters-catalogies__mobile">
      <span class="filters-catalogies__name">Фильтры:</span>
      <span class="filters-catalogies__close _icon-close"></span>
    </div>

    {% for filter_group in filter_groups %}
    <div id="filter-group{{ filter_group.filter_group_id }}" class="filters-catalogies__item">
      {% set checked = false %}
      {% for filter in filter_group.filter %}
        {% if filter.filter_id in filter_category %}
          {% set checked = true %}
        {% endif %}
      {% endfor %}
      {% if checked %}
        <div class="filters-catalogies__title _spoller _active _active-delay">
            <label class="filters-catalogies__label">{{ filter_group.name }}</label>
            <span class="filters-catalogies__decor"></span>
        </div>
        <div class="filters-catalogies__body" style="display:block">
      {% else %}
        <div class="filters-catalogies__title _spoller">
            <label class="filters-catalogies__label">{{ filter_group.name }}</label>
            <span class="filters-catalogies__decor"></span>
        </div>
        <div class="filters-catalogies__body">
      {% endif %}
      
        {% for filter in filter_group.filter %}
          {% if filter.count %}
          {% if filter.filter_id in filter_category %}
            <input data-label="{{ filter.name }}" data-sublabel="{{ filter.count }}" type="checkbox" value="{{ filter.filter_id }}" checked="checked" name="filter[]">
          {% else %}
            <input data-label="{{ filter.name }}" data-sublabel=" ({{ filter.count }})" type="checkbox" value="{{ filter.filter_id }}" name="filter[]">
          {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
    {% endfor %}

    <div class="filters-catalogies__footer">
      <button type="button" id="button-filter" class="filters-catalogies__apply">Применить</button>
    </div>
</div>
<script type="text/javascript"><!--
$('#button-filter').on('click', function() {
	filter = [];

	$('input[name^=\'filter\']:checked').each(function(element) {
		filter.push(this.value);
	});

	location = '{{ action }}&filter=' + filter.join(',');
});
//--></script> 
