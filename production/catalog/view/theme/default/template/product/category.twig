{{ header }}

<main class="page _catalog">

  <div id="product-category" class="container _start">

    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>


    <div class="row">
      {% if products %}
        {{ column_left }}
        {% if column_left and column_right %}
        {% set class = 'col-md-6 col-sm-5' %}
        {% elseif column_left or column_right %}
        {% set class = 'col-md-9 col-sm-8 with-column-left' %}
        {% else %}
        {% set class = 'col-sm-12' %}
        {% endif %}
      {% else %}
        {% set class = 'col-sm-12' %}
      {% endif %}

      <div id="content" class="{{ class }}">
        {{ content_top }}
        <div class="header-page__title main__title">
          <h1>{{ heading_title }}</h1>
        </div>

        {# !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! #}
        {% if categories %}

          <div class="brands__body">
            {% for category in categories %}
              {% if category.count %}
                <div class="brands__item main__card">
                  <a href="{{ category.href }}">
                    {% if category.image %}
                      <img src="{{ category.image }}" alt="{{ category.name }}">
                    {% else %}
                      <img class="_no-img" src="image/catalog/camera.svg" alt="{{ category.name }}">
                    {% endif %}
                    <p>{{ category.name }}
                    </p>
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          </div>
          
        {% endif %}

        {% if manufacturers %}
          <div class="manufacturers">
            <div class="manufacturers__header">
              <div class="header-page__title main__title">
                <h3>Бренды</h3>
              </div>            
            </div>
            <div class="manufacturers__body">
              <div class="swiper-container manufacturers__slider slider-manufacturers">
                <div class="swiper-wrapper slider-manufacturers__wrapper">
                  {% for manufacturer in manufacturers %}
                    {% if manufacturer.count %}
                      <div class="swiper-slide slider-manufacturers__slide">
                          <a href="{{ manufacturer.href }}" data-tippy-content="{{ manufacturer.name }}">
                            {% if manufacturer.image %}
                              <img class="swiper-lazy" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ manufacturer.image }}" alt="{{ manufacturer.name }}">
                            {% else %}
                              <img class="_no-img" src="image/catalog/camera.svg" alt="{{ manufacturer.name }}">
                            {% endif %}
                          </a>
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
                <div class="more__item_next _icon-arrowright more__item"></div>
                <div class="more__item_prev _icon-arrowleft more__item"></div>
              </div>
            </div>
          </div>
        {% endif %}

        {# !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! #}
      
        {% if products %}

        <div class="row opencart__center opencart__header-catalog">
          <div class="col-md-2 col-sm-6 hidden-xs">
            <div class="btn-group btn-group-sm">
              <button type="button" id="list-view" class="btn btn-default" data-toggle="tooltip" title="{{ button_list }}"><i class="fa fa-th-list"></i></button>
              <button type="button" id="grid-view" class="btn btn-default" data-toggle="tooltip" title="{{ button_grid }}"><i class="fa fa-th"></i></button>
            </div>
          </div>
          <div class="col-md-4 col-xs-12 opencart__compare-wrapper">
            <a href="{{ compare }}" id="compare-total" class="btn opencart__compare">{{ text_compare }}</a>
          </div>
          <div class="col-md-4 col-xs-12 opencart__select">
            <label for="input-sort">{{ text_sort }}</label>
            <div class="form-group">
              <select id="input-sort" class="form-control" onchange="location = this.value;">

                {% for sorts in sorts %}
                {% if sorts.value == '%s-%s'|format(sort, order) %}

                <option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>

                {% else %}

                <option value="{{ sorts.href }}">{{ sorts.text }}</option>

                {% endif %}
                {% endfor %}

              </select>
            </div>
          </div>
          <div class="col-md-2 col-xs-12 opencart__select">
            <label for="input-limit">{{ text_limit }}</label>
            <div class="form-group">
              <select id="input-limit" class="form-control" onchange="location = this.value;">
                
                {% for limits in limits %}
                {% if limits.value == limit %}
                
                <option value="{{ limits.href }}" selected="selected">{{ limits.text }}</option>
                
                {% else %} 
                
                <option value="{{ limits.href }}">{{ limits.text }}</option>
                
                {% endif %}
                {% endfor %}     
              
              </select>
            </div>
          </div>
        </div>


        <div class="row catalog-catalogies opencart__catalogies"> 
          {% for product in products %}
          <div class="product-layout product-list col-xs-12">
            <div class="catalog-item">
              <div class="product-thumb opencart__product-thumb">
                <div class="image"><a href="{{ product.href }}">
                  <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive b-lazy" />
                  <div class="img-catalog__stickers stickers">
                    {% if product.special %}
                    <div class="stickers__sticker stickers__sale"></div>
                    {% endif %}
                  </div>
                </a></div>
                <div>
                  <div class="caption">
                    <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                    <p>{{ product.description }}</p>

                    {% if product.price %}
                    <div class="price _price info-catalog__price">
                      {% if not product.special %}
                        {{ product.price }}
                        <span class="_rub"></span>
                      {% else %}
                        <p class="price-new info-catalog__priced">{{ product.special }}<span class="_rub"></span></p>
                        <p class="price-old info-catalog__priced">{{ product.price }}<span class="_rub"></span></p> 
                      {% endif %}
                      {% if product.tax %} 
                        <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> 
                      {% endif %} 
                    </div>
                    {% endif %}

                    {% if product.rating %}
                    <div class="rating__wrapper">
                      <span class="rating__stars"> 
                        {% for i in 1..5 %}
                          {% if product.rating < i %} 
                            <span class="fa fa-stack"><i class="_icon-star rating__stars-null fa fa-stack-1x"></i></span>
                          {% else %}
                            <span class="fa fa-stack"><i class="_icon-star rating__stars-null fa fa-stack-1x"></i><i class="_icon-star rating__stars-full fa fa-stack-1x"></i></span>
                          {% endif %}
                        {% endfor %}
                      </span>
                    </div>
                    {% endif %}

                    <div class="info-catalog__options">
                      <button class="info-catalog__wishlist" type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart"></i></button>
                      <button class="info-catalog__compare" type="button" onclick="compare.add('{{ product.product_id }}');">В сравнение</button>
                    </div>

                  </div>

                  <div class="catalog-catalogies__footer">
                    <a href="{{ product.href }}"><i class="fa fa-shopping-cart"></i><span>Подробнее</span></a>
                  </div>

                </div>
              </div>
            </div>
          </div>
          {% endfor %} 
        </div>

        <div class="row opencart__center opencart__paginator">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
        {% endif %}

        {% if not categories and not products %}
        <p>{{ text_empty }}</p>
        <div class="buttons">
          <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
        </div>
        {% endif %}

        {{ content_bottom }}
      </div>

      {{ column_right }}
    </div>




  </div>
</main>

{{ footer }} 
