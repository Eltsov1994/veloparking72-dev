{{ header }}
<div id="information-contact" class="_container _start col-xs-12">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>

  <div class="row">
    {{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}

    <div id="content" class="{{ class }} opencart__contacts">
      {{ content_top }}

      <div class="header-page__title main__title">
        <h1>{{ heading_title }}</h1>
      </div>


      <div class="panel panel-default col-sm-12">
        <div class="panel-body">
          <div class="row contacts__information">
            {% if image %}
              <div><img src="{{ image }}" alt="{{ store }}" title="{{ store }}" class="img-thumbnail" /></div>
            {% endif %}
            <div>
              <div><strong>E-mail</strong></div>
              <p><a href="mailto:{{ config_email }}">{{ config_email }}</a></p>
            </div>
            <hr>
            <div>
              <div><strong>{{ text_telephone }}</strong></div>
              <p><a href="tel:{{ telephone_split }}">{{ telephone }}</a></p>
            </div>
          </div>
        </div>
      </div>

      {% if locations %}
        <h3>{{ text_store }}:</h3>
        <div class="contacts-information _spollers _one">
          {% for location in locations %}
            <div class="contacts-information__item">
              <div class="contacts-information__title _spoller">{{ location.name }}<span></span></div>
              <div class="contacts-information__body" style="display: none;">
                <div class="col-sm-4">
                  <div class="panel-body">
                    <div class="row contacts__information">
                      {% if location.image %}
                        <div><img src="{{ location.image }}" alt="{{ location.name }}" title="{{ location.name }}" class="img-thumbnail" /></div>
                      {% endif %}
                      <div>
                        <p><strong>Адрес</strong></p>
                        <p><address>{{ location.address }}</address></p>
                        <p><span class="hidden geocode">{{ location.geocode }}</span></p>
                      </div>
                      <div>
                        <p><strong>{{ text_telephone }}</strong></p>
                        <p>{{ location.telephone }}</p>
                      </div>
                      <div>
                        {% if open %}
                          <p><strong>{{ text_open }}</strong></p>
                          <p>{{ location.open }}</p>
                        {% endif %}
                        {% if location.comment %}
                          <p><strong>{{ text_comment }}</strong></p>
                          <p>{{ location.comment }}</p>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </div>
                <div class="map col-sm-8" id="map{{ location.location_id }}"></div>
              </div>
            </div>
          {% endfor %}
        </div>
